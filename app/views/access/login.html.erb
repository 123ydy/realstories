<h1>Please Login</h1>
<% form_tag do %>
  <p>
  <%= label_tag :name %>
  <%= text_field_tag :name, params[:name] %>
  </p>
  <p>
  <%= label_tag :password %>
  <%= password_field_tag :password, params[:password] %>
  </p>
  <%= submit_tag "Login" %>
<% end %>

<%= link_to 'Forgot Password', send_reset_code_path %>