<h1>Editing story</h1>

<% form_for(@story) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :disable_commenting %>
    <%= f.check_box :disable_commenting %>
  </p>
  <p>
    <%= f.label :disable_voting %>
    <%= f.check_box :disable_voting %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @story %> |
<%= link_to 'Back', stories_path %>